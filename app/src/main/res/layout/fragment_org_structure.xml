<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_org_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organizational Structure"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_primary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_org_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Student Supreme Council (SSC) is the supreme student government body of the university, representing and serving the student body."
                    android:textColor="@color/text_primary"
                   />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Adviser Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_adviser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adviser"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_primary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="President"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_primary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Executive Vice President"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_primary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VP SDG Alangilan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_primary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Secretary General"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_primary"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Finance Officer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_primary"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Executive Committee Recycler View -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_executive_committee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>